{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "vrc-worlds-manager",
  "version": "1.3.0-2",
  "identifier": "com.raifaworks.vrc-worlds-manager",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "VRC World Manager V2 - Custom Edition",
        "width": 1100,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installerHooks": "./windows/hooks.nsi",
        "languages": [
          "English",
          "Japanese"
        ],
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDNTJCMzNBMzVGQzk4MEYKUldRUG1QdzFPck5TWEE5UjZxUDc0ZDVwZThnM29RODlpNzl6bDhZbzA0YllQa3FUb1k5Qy93c28K",
      "endpoints": [
        "https://releases.raifaworks.com/manifests/stable.json"
      ]
    },
    "deep-link": {
      "mobile": [
        {
          "host": "vrcwm.raifaworks.com",
          "pathPrefix": [
            "/folder/import/"
          ]
        }
      ],
      "desktop": {
        "schemes": [
          "vrc-worlds-manager"
        ]
      }
    }
  }
}